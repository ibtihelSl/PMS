@model PMS.Models.message

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/accueilFront.cshtml";
}

<link href="~/Content/Front/css/contact.css" rel='stylesheet' type='text/css' />


<!--//header-->
<div class="banner-inner">
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Accueil")">Accueil</a>
    </li>
    <li class="breadcrumb-item active">Contact</li>
</ol>



<!--//banner-->
