<section class="services">
    <div class="container">
        <h3 class="tittle"></h3>

        <div class="row inner-sec-wthree">
            <div class="contact-map">



                <fieldset>

                    <meta charset="utf-8">
                    <meta name="viewport" content="width=device-width, initial-scale=1">

                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


                    <div id="map" style="width:100%;height:500px"></div>
                    <script>

        function myMap() {
            var Bhubaneswar = new google.maps.LatLng(20.296100, 85.824500);
            var Hyderabad = new google.maps.LatLng(17.3850, 78.4867);
            var Bangalore = new google.maps.LatLng(36.856895, 10.188828);

            var mapCanvas = document.getElementById("map");
            var mapOptions = { center: Bangalore, zoom: 17 };
            var map = new google.maps.Map(mapCanvas, mapOptions);

            var flightPath = new google.maps.Polygon({
                path: [Bhubaneswar, Hyderabad, Bangalore],
                strokeColor: "Green",
                strokeOpacity: 0.8,
                strokeWeight: 2,
                fillColor: "Yellow",
                fillOpacity: 0.4
            });

            var marker1 = new google.maps.Marker({
                position: Bhubaneswar,
                animation: google.maps.Animation.BOUNCE //BOUNCE ,DROP , lo , no
            });
            var marker2 = new google.maps.Marker({
                position: Hyderabad,
                animation: google.maps.Animation.BOUNCE //BOUNCE ,DROP , lo , no
            });
            var marker3 = new google.maps.Marker({
                position: Bangalore,
                animation: google.maps.Animation.BOUNCE //BOUNCE ,DROP , lo , no
            });

            //flightPath.setMap(map);
            //marker1.setMap(map);
            //marker2.setMap(map);
            marker3.setMap(map);
        }
                    </script>

                    @*<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCvHb9kp9zK7OdVQZEmzhHwyIiT7xwHL74&callback=myMap"></script>*@
                    <script async defer
                            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCvHb9kp9zK7OdVQZEmzhHwyIiT7xwHL74&signed_in=true&libraries=places&callback=myMap"></script>
                </fieldset>

            </div>
            <div class="address row">
                <div class="col-md-4 address-grid-inf-w3layouts" data-aos="zoom-out">
                    <div class="address-info">
                        <div class="address-left">
                            <span class="fas fa-phone-volume" aria-hidden="true"></span>
                        </div>
                        <div class="address-right">
                            <h6>Num Tel°</h6>
                            <p>71 710 936, 71 710 940, 71 710 990
                                &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp</p>

                        </div>

                    </div>
                </div>
                <div class="col-md-4 address-grid-inf-w3layouts" data-aos="zoom-out">
                    <div class="address-info">
                        <div class="address-left1">
                            <span class="far fa-envelope" aria-hidden="true"></span>
                        </div>
                        <div class="address-right">
                            <h6>Adresse Email</h6>
                            <p >
                                
                                &nbsp &nbsp &nbsp &nbsp infopms2012@gmail.com 
                                &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp 
                                
                            </p>
                        </div>

                    </div>
                </div>
                <div class="col-md-4 address-grid-inf-w3layouts" data-aos="zoom-out">
                    <div class="address-info">
                        <div class="address-left2">
                            <span class="fas fa-map-marker-alt" aria-hidden="true"></span>
                        </div>
                        <div class="address-right">
                            <h6>Localisation</h6>
                            <p>
                                Immeuble Tej, 1er Etage, Rue 18 janvier 1952, Ariana-2080

                            </p>
                        </div>
                    </div>
                </div>

            </div>

            <div class="contact_grid_right" >

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4  data-aos="fade-right" >Contact</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                           
                            <div class="form-group" data-aos="fade-right">
                                
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", required = "required" , @type = "email" } })
                                    @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group" data-aos="fade-right">
                                
                                <div class="col-md-10" style="font:message-box">
                                    @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control", placeholder = "Nom", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                                <div class="form-group" data-aos="fade-right">

                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.objet, new { htmlAttributes = new { @class = "form-control", placeholder = "Objet", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.objet, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                        <div class="form-group" data-aos="fade-right">
                            <div class="col-md-10" style="font:message-box">
                                @Html.EditorFor(model => model.msg, new { htmlAttributes = new { @class = "form-control", placeholder = "Message...", required = "required", @style = "height:200px" } })
                                @Html.ValidationMessageFor(model => model.msg, "", new { @class = "text-danger" })
                            </div>
                        </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Envoyer" class="btn btn-default" />
                                    <input type="reset" value="Vider" class="btn btn-warning">
                                    @*@Html.ActionLink("contacter", "SendMail","Accueil")*@
                                </div>
                            </div>
                        </div>
                        
                }

              

            </div>
        </div>
    </div>
</section>

